= form_for @entry do |f|
  -if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :pub_time
    = f.datetime_select :pub_time
  .field
    = f.label :source_id
    = f.number_field :source_id
  .field
    = f.label :source_type
    = f.text_field :source_type
  .actions
    = f.submit 'Save'
