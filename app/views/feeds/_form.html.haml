= form_for @feed do |f|
  -if @feed.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feed.errors.count, "error")} prohibited this feed from being saved:"
      %ul
        - @feed.errors.full_messages.each do |msg|
          %li= msg

  .clearfix
    = f.label :link
    .input= f.text_field :link
  .clearfix
    = f.label :title
    .input= f.text_field :title
  .clearfix
    = f.label :homepage
    .input= f.text_field :homepage
  .actions
    = f.submit 'Save', :class => 'btn success'
    = link_to 'Cancel', feeds_path, :class => 'btn'
